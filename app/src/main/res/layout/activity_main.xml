<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/btn1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:layout_gravity="center_horizontal"
            android:background="#fff08c35"
            android:layout_margin="10px"
            android:onClick="btn1click" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:id="@+id/btn2"
            android:layout_gravity="center_horizontal"
            android:background="#fff08c35"
            android:layout_margin="10px"
            android:onClick="btn2click" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:id="@+id/btn3"
            android:layout_gravity="center_horizontal"
            android:background="#fff08c35"
            android:layout_margin="10px"
            android:onClick="btn3click"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/btn4"
            android:layout_gravity="center_horizontal"
            android:background="#fff08c35"
            android:layout_margin="10px"
            android:onClick="btn4click" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XYZ READEr"
            android:id="@+id/btn5"
            android:layout_gravity="center_horizontal"
            android:background="#fff08c35"
            android:layout_margin="10px"
            android:onClick="btn5click" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/btn6"
            android:layout_gravity="center_horizontal"
            android:background="#fff01b0b"
            android:layout_margin="10px"
            android:textColor="#ffffffff"
            android:padding="10dp"
            android:onClick="btn6click" />
    </LinearLayout>

</RelativeLayout>
